<div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form"}) do |f| %>
    <h2>Sign Up</h2>
    <div class="form-contents-wrap">
      <%= devise_error_messages! %>
      <div class="field">
        <%= f.label :username, class: "hidden" %>
        <%= f.text_field :username, autofocus: true, placeholder: "Username" %>
      </div>
      <div class="field">
        <%= f.label :email, class: "hidden" %>
        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
      </div>
      <div class="field">
        <%= f.label :password, class: "hidden" %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, class: "hidden" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password" %>
      </div>
      <div class="field">
        <%= f.submit "Sign up" %>
      </div>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
  <div class="form-right-buffer"></div>
</div>