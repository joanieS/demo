<p id="notice"><%= notice %></p>
<h1><%= @installation.name %></h1>
<ul>
  <% content_tag(:li, "Total beacons: #{beacon_count(@installation)}") if has_beacons?(@installation) %>
  <li>Created at: <%= creation_date(@installation) %></li>
</ul>
<% if has_beacons?(@installation) %>
  <table>
    <thead>
      <tr>
        <th>Minor ID</th>
        <th>Major ID</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Content</th>
        <th>Type</th>
        <th>Audio</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @installation.beacons.find_each do |beacon| %>
        <tr>
          <td><%= beacon.minor_id %></td>
          <td><%= beacon.major_id %></td>
          <td><%= beacon.latitude %></td>
          <td><%= beacon.longitude %></td>
          <td><%= beacon.content %></td>
          <td><%= beacon.content_type %></td>
          <td><%= beacon.audio %></td>
          <td><%= link_to 'Show', customer_installation_beacon_path(@customer, @installation, beacon) %></td>
          <td><%= link_to 'Edit', edit_customer_installation_beacon_path(@customer, @installation, beacon) %></td>
          <td><%= link_to 'Destroy', customer_installation_beacon_path(@customer, @installation, beacon), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>This installation currently has no beacons.</p>
<% end %>
<%= link_to "Add a beacon", new_customer_installation_beacon_path(@customer,@installation) %><br>
<%= link_to "Back to Installations", customer_installations_path(@customer) %>