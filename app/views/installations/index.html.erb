<%= render "header" %>
<h2>Installations</h2>
<% if @installations.empty? %>
  <p>You currently have no installations.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Installation</th>
        <th>Active</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @installations.find_each do |installation| %>
        <tr>
          <td><%= link_to installation.name, installation_path(installation) %></td>
          <td><%= current_state(installation) %></td>
          <td><%= link_to "Edit", edit_installation_path(installation) %></td>
          <td><%= link_to "Delete", installation_path(installation), 
            method: :destroy, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= link_to "Add New Installation", new_installation_path %>
