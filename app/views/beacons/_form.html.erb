<%= form_for [@customer, @installation, @beacon] do |f| %>
  <% if @beacon.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@beacon.errors.count, "error") %> prohibited this beacon from being saved:</h3>
      <ul>
        <% @beacon.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h3>Beacon Info</h3>
    <div class="field">
      <%= f.label :location %><br>
      <%= f.text_area :location, placeholder: "e.g., By the Water Lillies." %>
    </div>
    <div class="field">
      <%= f.label :minor_id, "Minor ID" %><br>
      <%= f.number_field :minor_id %>
    </div>
    <div class="field">
      <%= f.label :major_id, "Major ID" %><br>
      <%= f.number_field :major_id %>
    </div>
    </div>
    <% if params[:action] == "new" %>
      <div class="field">
        <%= f.label :uuid, "UUID" %><br>
        <%= f.text_field :uuid, placeholder: "B9407F30-F5F8-466E-AFF9-25556B57FE6D", disabled: true %>
      </div>
    <% elsif params[:action] == "edit" %>
      <div class="field">
        <%= f.label :latitude %><br>
        <%= f.number_field :latitude , step: "any", min: "-90", max: "90" %>
      </div>
      <div class="field">
        <%= f.label :longitude %><br>
        <%= f.number_field :longitude, step: "any", min: "-180", max: "180" %>
      <div class="field">
        <%= f.label :uuid, "UUID" %><br>
        <%= f.text_field :uuid %>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :active %><br>
      <%= f.check_box :active %>
    </div>
  <h3>Content Info</h3>
    <div class="field">
      <%= f.label :content_type, "Content type" %><br>
      <%= f.select :content_type, options_for_select([["Image","image"], ["Video","local-video"], ["Website", "web"], ["Online video","web-video"], ["Photo gallery","photo-gallery"], ["Memories", "memories"]]) %>
    </div>
    <div class="field content-type-field" id="content-file-field">
      <%= f.label :content %><br>
      <%= f.file_field :content %>
    </div>
    <div class="field content-type-field" id="content-url-field"> 
      <%= f.label :content_url %><br>
      <%= f.text_field :content_url %>
    </div>
    <div class="field">
      <%= f.label :audio %><br>
      <%= f.file_field :audio %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
